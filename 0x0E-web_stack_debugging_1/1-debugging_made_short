#!/usr/bin/env bash
# a Bash script that configures a server
grep -q "listen 80 default_server;" /etc/nginx/sites-enabled/default || (echo "listen 80 default_server;" | sudo tee -a /etc/nginx/sites-enabled/default && sudo systemctl restart nginx)
sudo netstat -tuln | grep -q ":80" && sudo systemctl stop apache2
sudo nginx -t -c /etc/nginx/nginx.conf &> /dev/null || sudo systemctl restart nginx
